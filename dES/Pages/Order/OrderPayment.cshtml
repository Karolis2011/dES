@page
@model dES.Pages.Order.OrderPaymentModel
@{
}
@{
    ViewData["Title"] = "OrderPayment";
}
<div class="text-center">
    <h1 class="display-4">Mokėjimo detales</h1>
</div>
<div class="row justify-content-center">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Payment.Ammount" class="control-label"></label>
                <input asp-for="Payment.Ammount" class="form-control" />
                <span asp-validation-for="Payment.Ammount" class="text-danger"></span>
            </div>
            <div>
                <select asp-for="Payment.Method" class="form-control" asp-items="@Html.GetEnumSelectList<OrderPaymentModel.PaymentMethod>()"></select>
                <span asp-validation-for="Payment.Method" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Payment.OrderId" class="control-label"></label>
                <input asp-for="Payment.OrderId" class="form-control" />
                <span asp-validation-for="Payment.OrderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Apmokėti" class="btn btn-primary" />
            </div>
            <a asp-page="OrderList">Atgal į užsakymų sąrašą</a>

        </form>
    </div>
</div>
<div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
