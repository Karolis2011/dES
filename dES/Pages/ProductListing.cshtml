@page
@model ProductListingModel

<body style="background-color:#f5f5f5">
    <div class="container">
        <center class="my-4"><h2 class="justify-content-center"> Laptopai namams</h2></center>
        <div class="row justify-content-center">
            @foreach (var product in Model.Products)
            {
                <div class="col-md-4 col-lg-3 col-sm-6 my-4">
                    <a asp-page="/ProductDetails" asp-all-route-data=@Model.GetRouteData(product, Model) class="card text-dark p-2" style="border:none;">
                        <img class="card-img-top" src="/assets/pc_1.png">
                        <div class="card-body">
                            <h5 class="card-title">@product.Title</h5>
                            <span>Kaina:</span>
                            <span class="product-price">@product.Price €</span>
                            <div>Kiekis: 1</div>
                        </div>
                    </a>
                </div>
            }
        </div>
    </div>
</body>
